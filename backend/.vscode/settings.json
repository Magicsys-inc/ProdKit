{
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.envFile": "${workspaceFolder}/backend/.env.testing",
  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "files.exclude": {
    "**/.git": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/.ruff_cache": true
  },
  "editor.rulers": [88],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.suggest.showKeywords": true,
  "editor.suggest.showSnippets": true,
  "python.pythonPath": "${workspaceFolder}/backend/.venv/Scripts/python.exe",
  "python.testing.pytestPath": "${workspaceFolder}/backend/.venv/Scripts/pytest.exe",
  "python.testing.cwd": "${workspaceFolder}/backend",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "ruff.lint.args": ["--config=ruff.vscode.toml"]
}
